<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">
	<!-- Configure Authentication mechanism -->
	<global-method-security pre-post-annotations="enabled" />
	<http auto-config="true" use-expressions="true">

		<intercept-url pattern="/*/resources/**" access="permitAll" />
		<intercept-url pattern="/login/**" access="permitAll" />
		<intercept-url pattern="/secure/*" access="isAuthenticated()" />

		<form-login login-page="/" default-target-url="/secure/"
			authentication-failure-url="/login?error" username-parameter="username"
			password-parameter="password" authentication-failure-handler-ref="authenticationFailureHandler" />
		<!-- <logout logout-url="/secure/logout" logout-success-url="/" delete-cookies="JSESSIONID" 
			success-handler-ref="logoutSuccessHandler" /> -->
		<logout logout-url="/secure/logout" delete-cookies="JSESSIONID"
			logout-success-url="/" />
		<!-- <csrf /> -->
	</http>
	<beans:bean id="logoutSuccessHandler"
		class="com.healthcare.freemedicalopinion.security.CustomLogoutSuccesshandler">
	</beans:bean>

	<authentication-manager>
		<authentication-provider ref="customAuthenticationProvider" />
	</authentication-manager>

	<beans:bean id="customAuthenticationProvider"
		class="com.healthcare.freemedicalopinion.security.CustomAuthenticationProvider">
	</beans:bean>



	<beans:bean id="authenticationFailureHandler"
		class="org.springframework.security.web.authentication.ExceptionMappingAuthenticationFailureHandler">
		<beans:property name="exceptionMappings">
			<beans:props>
				<beans:prop
					key="org.springframework.security.authentication.BadCredentialsException">/#!/login?error=Wrong userName or Password</beans:prop>
				<beans:prop
					key="org.springframework.security.authentication.CredentialsExpiredException">/#!/login?error=Credential Expired</beans:prop>
				<beans:prop
					key="org.springframework.security.authentication.LockedException">/#!/login?error=Email is not verified</beans:prop>
				<beans:prop
					key="org.springframework.security.authentication.DisabledException">/#!/login?error=Account Disable</beans:prop>
			</beans:props>
		</beans:property>
	</beans:bean>

</beans:beans>